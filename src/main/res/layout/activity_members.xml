<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MembersActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.3"
        android:src="@drawable/images"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/membersscroll">
        <LinearLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
            <Button
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/objective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OBJECTIVE"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
            <Button
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/members"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEMBERS"
                android:background="@android:color/transparent"/>
            <Button
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/events"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVENTS"
                android:background="@android:color/transparent"/>
            <Button
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/contact"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT US"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@id/membersscroll"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/membersscroll">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <!--<android.support.v7.widget.CardView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:cardCornerRadius="5dp"-->
                <!--android:layout_margin="10dp"-->
                <!--android:id="@+id/memberscard">-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/members"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:textColor="@android:color/black"/>
            <!--</android.support.v7.widget.CardView>-->
    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardCornerRadius="5dp"-->
        <!--android:layout_margin="10dp"-->
        <!--&gt;-->
            <TextView

                android:id="@+id/advisor"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advisorname"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:textColor="@android:color/black"/>
    <!--</android.support.v7.widget.CardView>-->
    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardCornerRadius="5dp"-->
        <!--android:layout_margin="10dp">-->
            <TextView
                android:id="@+id/execuitve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/executive"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/trustees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TRUSTEES"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:textColor="@android:color/black"/>
    <!--</android.support.v7.widget.CardView>-->

    </LinearLayout>
</ScrollView>

</RelativeLayout>